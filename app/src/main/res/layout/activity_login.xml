<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#efdecb"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nyanch.newtwork.LoginActivity">

    <ImageView
        android:src="@drawable/title"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="135dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/face"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_face_white_24dp"
            android:layout_width="40sp"
            android:layout_height="40sp"/>
        <EditText
            android:layout_toEndOf="@id/face"
            android:layout_toRightOf="@id/face"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameEditText"
            android:inputType="text"
            android:textSize="20sp"
            android:padding="15dp"
            android:hint="username" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/lock"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_lock_white_24dp"
            android:layout_width="40sp"
            android:layout_height="40sp"/>
        <EditText
            android:layout_toEndOf="@id/lock"
            android:layout_toRightOf="@id/lock"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEditText"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:padding="15dp"
            android:hint="password" />
    </RelativeLayout>
    <Button
        android:layout_marginTop="5dp"
        android:background="#d13d25"
        android:textColor="#ffffff"
        android:text="sign in"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:id="@+id/loginButton"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="#0000"
        android:textColor="#d13d25"
        android:text="forgot password?"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:id="@+id/forgotButton"
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="new to sHARE?"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="#e06750"
            android:textColor="#ffffff"
            android:text="sign up"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/signUpButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
